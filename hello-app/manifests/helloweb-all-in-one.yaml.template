apiVersion: v1
kind: Service
metadata:
  name: APP_NAME
  labels:
    app: hello
spec:
  selector:
    app: hello
    tier: web
  ports:
  - port: 60001
    targetPort: 8080
  type: NodePort
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: APP_NAME
spec:
  selector:
    matchLabels:
      app: hello
      tier: web
  template:
    metadata:
      labels:
        app: hello
        tier: web
    spec:
      containers:
      - name: hello-app
        image: DOCKER_IMAGE_NAME
        ports:
        - containerPort: 8080
